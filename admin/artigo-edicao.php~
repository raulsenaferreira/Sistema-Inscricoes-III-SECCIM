<script type="text/javascript">
	$('input[name=datapub]').keypress(function(e){
		if ((e.which < 48 || e.which > 57) && e.which != 8 && e.which != 0)
			return false;
		v = $(this).val();
		v=v.replace(/\D/g,"");
		v=v.replace(/^(\d{4})(\d)/,"$1/$2");
		v=v.replace(/^(\d{2})(\d)/,"$1/$2");
		$(this).val(v);
	}); 
</script>

